@using GettingData.Models
@model Teacher

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<a asp-action="getstudentlist" asp-controller="student">Öğrenci ekleme sayfasına git</a>
<h2>Öğretmen Ekleme Sayfası</h2>

<form method="post" asp-action="addteacher" asp-controller="teacher">
    <div>
        <label asp-for="FirstName">İsim</label><br />
        <input type="text" asp-for="FirstName" />
    </div>
    <div>
        <label asp-for="LastName">İsim</label><br />
        <input type="text" asp-for="LastName" />
    </div>
    <div>
        <label asp-for="BranchID">Branş</label>
        <select asp-for="BranchID" asp-items="@(new SelectList(ViewBag.Branches, "ID", "BranchName"))"></select>
    </div>
    <div>
        <button type="submit">Öğretmen Ekle</button>
    </div>
</form>













